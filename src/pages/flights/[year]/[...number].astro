---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const flightEntries = await getCollection('flights');
  return flightEntries.map(entry => ({
    params: { year: entry.data.actualDeparture.getFullYear(), number: entry.data.number }, props: { entry },
  }));
}
const { entry } = Astro.props;

---

<Layout title={ entry.data.number }>
	<div class="content-container">
    <h1>{ entry.data.number }</h1>
    <p>{ entry.data.airline }</p>
	</div>
	
</Layout>